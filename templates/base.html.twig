<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar {% if app.request.get('_route') == 'home' %}hero-navbar{% endif %}">
                <div class="logo">
                    <a href="{{ path('home') }}"><img src="{{ asset('logo.png') }}" alt="Logo WAT"></a>
                </div>

                <button class="burger" aria-label="Menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <ul class="nav-links">
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li><a href="{{ path('contact') }}">Contact</a></li>
                    <li><a href="{{ path('jouer') }}">Jouer</a></li>
                    <li><a href="{{ path('personnages') }}">Personnages</a></li>
                </ul>
 
                 <ul class="auth-nav">
                    {% if not is_granted('ROLE_USER') %}
                        <li><a href="{{ path('login') }}">Connexion</a></li>
                        <li><a href="{{ path('register') }}">Inscription</a></li>
                    {% else %}
                        <li class="user-profile-nav">
                            <a href="{{ path('profile') }}" class="profile-link">
                                {% if app.user.profileImageName %}
                                    <img src="{{ vich_uploader_asset(app.user, 'profileImageFile') }}" alt="Photo de profil" class="profile-avatar">
                                {% else %}
                                    <div class="profile-avatar-placeholder">
                                        {{ app.user.username|first|upper }}
                                    </div>
                                {% endif %}
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin') }}" class="admin-link" title="Panel Administrateur">üõ°Ô∏è Admin</a></li>
                        {% endif %}
                        <li><a href="{{ path('logout') }}">Se d√©connecter</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer class="site-footer">
        <img src="bottom.png" alt="">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>√Ä propos</h3>
                    <div class="footer-line"></div>
                    <ul class="footer-links">
                        <li><a href="#">Politique de confidentialit√©</a></li>
                        <li><a href="#">Mentions l√©gales</a></li>
                        <li><a href="#">Conditions g√©n√©rales d'utilisation</a></li>
                    </ul>
                </div>
                
                <div class="footer-center">
                    <a href="{{ path('home') }}"><img src="{{ asset('logo.png') }}" alt="Logo WAT" class="footer-logo"></a>
                </div>
                
                <div class="footer-section">
                    <h3>Contact</h3>
                    <div class="footer-line"></div>
                    <div class="footer-contact">
                        <p><strong>WAT - Warrior Arena Tavern</strong></p>
                        <p>1664 Rue de la soif</p>
                        <p>86000 Fisher</p>
                        <p><a href="{{ path('contact') }}">Nous contacter</a></p>
                    </div>
                </div>
            </div>
            <p class="footer-copy">&copy; WAT - Warrior Arena Tavern - 2025</p>
        </footer>
    </body>
</html>
